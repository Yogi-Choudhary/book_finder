<div class="container">
  <div class="col-md-7 mx-md-auto mt-5">
    <div class="card shadow">
      <div class="card-body">
        <div class="form-group">
          <p class="card-title text-center">
            <%= image_tag(@book.image, style:'width:100%') %>
          </p>
        </div>  
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Title:</strong>
            <%= @book.title %>
          </p>
        </div>

        <div class="form-group">
          <p class="card-title text-center">
            <strong>Category:</strong>
            <%= @book.category %>
          </p>
        </div>
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Language:</strong>
            <%= @book.language %>
          </p>
        </div>
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Author:</strong>
            <%= @book.author %>
          </p>
        </div>
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Date:</strong>
            <%= @book.date %>
          </p>
        </div>
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Description:</strong>
            <%= @book.description %>
          </p>
        </div>
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Isbn:</strong>
            <%= @book.isbn %>
          </p>
        </div>
        <div class="form-group">
          <p class="card-title text-center">
            <strong>Total pages:</strong>
            <%= @book.total_pages %>
          </p>
        </div> 
        <div class="form-group">
          <p class="card-title text-center">
            <%= link_to 'Preview_PDF', @book.preview_pdf, class:'btn btn-primary' %>
          </p>
        </div>    

        <div class="form-group">
          <p class="card-title text-center">
            <%= link_to 'PDF', @book.pdf_file, class:'btn btn-primary' %>
          </p>
        </div>
        <div class="form-group">
          <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary btn-lg btn-block' %> <br>
          <%= link_to 'Back', books_path, class: 'btn btn-primary btn-lg btn-block' %>
        </div>

      <div class="card-body"> 
    </div>
  </div>
</div>        