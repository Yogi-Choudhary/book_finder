<div class="container">
  <div class="col-md-7 mx-md-auto mt-5">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="card-title text-center">Find Your Book</h2>
      </div>  
      <div class="card-body">
        <%= form_with url: "/index", method: :get do %>
          <%= text_field_tag(:search, params[:search]) %>
          <%= submit_tag("Search", name: nil)%>
        <%end%>
      </div>
    </div>  
  </div>    
</div>
<br><br>  
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <!-- <th scope="row">1</th> -->
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td>@<%= book.date %></td>
    </tr>
    <% end %>
  </tbody>  
</table>
