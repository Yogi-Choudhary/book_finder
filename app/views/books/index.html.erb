<center>
  <%= form_with url: "/index", method: :get do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search", name: nil) %>
  <%end%>
</center>


<table>
  <thead>
    <tr>
      <th><h2>Title</h2></th>
      <th><h2>Author</h2></th>
      <th><h2>Date</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= book.title %></strong></td>
        <td><strong><%= book.author %></strong></td>
        <td><strong><%= book.date%></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>