<div class="container">
  <div class="col-md-7 mx-md-auto mt-5">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="card-title text-center">Book List</h2>
      </div>  
    </div>  
  </div>    
</div>
<br><br> 
<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-3 mt-5">
        <div class="card h-100">
          <%=  image_tag(book.image, style: 'height: 15vw;') %>
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"></p>
            <%= link_to 'show', home_path(book) %>
          </div>
        </div>
      </div>
    <%end%>  
  </div>
</div>