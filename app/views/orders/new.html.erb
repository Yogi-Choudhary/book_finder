<div class="container">
  <div class="col-md-7 mx-md-auto mt-5">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="card-title text-center">Book Orders</h2>
      </div>
      <div class='form-group'>
        <p class='card-title text-center'>
          <!-- <strong>Image:</strong> -->
          <%= image_tag(@book.image, style:'width:100%, height:50%') %>
        </p>
      </div>
      <div class='form-group'>
        <p class='card-title text-center'>
          <strong>Title:</strong>
          <%= @book.title %>
        </p>
      </div>
      <div class='form-group'>
        <p class='card-title text-center'>
          <strong>Language:</strong>
          <%= @book.language %>
        </p>
      </div>
      <div class='form-group'>
        <p class='card-title text-center'>
          <strong>Price:</strong>
          <%= @book.price %>
        </p>
      </div>
      <div class='form-group'>
        <p class='card-title text-center'>
          <strong>Description:</strong>
          <%= @book.description %>
        </p>
      </div>
      <div class='form-group'>
        <p class='card-title text-center'>
          <%= link_to 'Order',  class:'btn btn-primary btn-lg btn-block' %>
        </p>
      </div>
    </div>
  </div>
</div>      
